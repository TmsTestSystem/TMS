# База данных PostgreSQL
DATABASE_URL=postgresql://tms_user:tms_password@localhost:5432/tms_spr

# JWT секрет для аутентификации (ИЗМЕНИТЕ НА СВОЙ!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Путь к Git репозиториям
GIT_REPO_PATH=./git-repos

# Режим работы (development/production)
NODE_ENV=development

# Порт сервера
PORT=5000

# URL клиентского приложения
CLIENT_URL=http://localhost:3000

# Настройки логирования
LOG_LEVEL=info

# Настройки безопасности
CORS_ORIGIN=http://localhost:3000

# Настройки загрузки файлов
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Настройки Git
GIT_TOKEN=your-github-personal-access-token
GIT_BRANCH=main
GIT_USER_NAME=TMS System
GIT_USER_EMAIL=tms@spr.com 